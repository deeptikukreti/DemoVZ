                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:text="Shading"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_device_name"
                        app:layout_constraintStart_toStartOf="@id/txt_device_name" />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:progress="80"
                        app:layout_constraintTop_toTopOf="@id/txt_action_temp"
                        app:layout_constraintBottom_toBottomOf="@id/txt_action_temp"
                        app:layout_constraintEnd_toStartOf="@id/seekBarPer"/>

